<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_gradient">

    <EditText
        android:id="@+id/etEventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="نام مناسبت"
        android:background="@drawable/edittext_rounded"
        android:padding="16dp"
        android:textColor="#4A148C"
        android:textColorHint="#D1C4E9"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif" />

    <Button
        android:id="@+id/btnSelectDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📅 انتخاب تاریخ"
        android:layout_marginBottom="12dp"
        android:padding="14dp"
        android:background="@drawable/btn_purple_rounded"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnSelectTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⏰ انتخاب زمان"
        android:layout_marginBottom="12dp"
        android:padding="14dp"
        android:background="@drawable/btn_purple_rounded"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✅ ثبت مناسبت"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_register_rounded"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="false"
        android:padding="14dp"/>

</LinearLayout>
